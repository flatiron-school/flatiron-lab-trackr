<div class="panel">
  <div class="panel-heading">
    <h1 class="panel-title">Select files to view  
      <button class="btn btn-info rotate-reset" data-menu="lab-files" id="select-lab-content-btn"><span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span></button>
    </h1>
  </div>
  <div data-id="lab-files" style="display: none;">
    <ul class="lab-select-list">
    <%lab.files.each do |f|%>
      <li><input class="file-checkbox" type="checkbox" data-id="selected-files" value="<%=f%>"> <%=f%></li>
    <%end%>
    </ul>
    <div class="lab-select-submit-btn">
      <button class="btn btn-info" data-submit="files">submit</button>
    </div>
  </div>
</div>